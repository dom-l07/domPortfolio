---
import Layout from "../layouts/Layout.astro";
import { Logo } from "../components/ui/Logo";
import { TypingAnimation } from "../components/ui/TypingAnimation";
import { ScrollIndicator } from "../components/ui/ScrollIndicator";
---

<Layout>
	<section class="min-h-screen flex items-center justify-center px-6 -mt-12 md:-mt-16 relative">
		<div class="flex flex-col lg:flex-row items-center justify-center gap-8 lg:gap-16 max-w-6xl w-full">
			<div class="flex-shrink-0">
				<Logo className="h-64 w-64 md:h-80 md:w-80 lg:h-96 lg:w-96" />
			</div>
			
			<div class="text-center lg:text-left space-y-4">
				<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
					Hi, I'm <span class="name-highlight">Dominic</span>
				</h1>
				<div class="text-2xl md:text-3xl lg:text-3xl relative">
					<span class="invisible">I'm a Aspiring Software Engineer</span>
					<div class="absolute inset-0">
						I'm a <TypingAnimation 
							words={["Student", "Aspiring Software Engineer", "Problem Solver", "Challenge Seeker", "Innovation Driven"]}
							client:load
						/>
					</div>
				</div>
				<p class="text-lg md:text-xl description-text max-w-lg leading-relaxed">
					I am passionate about coding, solving complex problems, and building useful projects that make a difference!
				</p>
			</div>
		</div>
		
		<ScrollIndicator client:load />
	</section>
	
	<section id="about" class="min-h-screen flex items-center justify-center px-6 bg-gray-50 dark:bg-gray-900">
		<div class="text-center">
			<h2 class="text-4xl md:text-5xl font-bold mb-8">About Me</h2>
			<p class="text-lg md:text-xl description-text max-w-4xl">
				More content coming soon...
			</p>
		</div>
	</section>
</Layout>
